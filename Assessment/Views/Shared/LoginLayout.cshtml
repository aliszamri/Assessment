<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DHL Assessment</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#show_password').hover(function show() {
                $('#Password').attr('type', 'text');
                $('.icon').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
            },
                function () {
                    $('#Password').attr('type', 'password');
                    $('.icon').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
                });
        });
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-image: linear-gradient(to bottom right,#FB48C4 0%,#9D00FF 65%);
            background-attachment: fixed;
            height: 100%;
        }

        #card {
            background: #fbfbfb;
            border-radius: 10px;
            box-shadow: 2px 6px 10px rgba(0, 0, 0, 0.65);
            height: auto;
            margin: 4rem auto 5rem auto;
            width: 380px;
        }

        #card-content {
            padding: 12px 40px;
        }

        #loginTitle {
            text-align: center;
            font-family: 'Lucida Handwriting';
            padding: 20px;
            color: #8e8f82;
        }

        h4 {
            font-size: 30px;
        }

        label {
            padding: 10px;
        }

        .form-group {
            text-align: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 15px;
            color: #8e8f82;
        }

        input, select, textarea {
            max-width: none;
        }

        #SubmitButton {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .form-control {
            display: block;
            width: 100%;
            height: 40px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .button-Login {
            padding: 9px 40px;
            background-color: #e356b9; /* Green */
            border: none;
            color: white;
            text-align: center;
            cursor: pointer;
            border-radius: 20px;
            width: 100%;
        }

        #show_password {
            height: 40px;
        }
    </style>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DHL Assessment</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
