@model Assessment.Models.Login

@{
    ViewBag.Title = "Login Page";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div id="card">
        <div id="card-content">
            <div class="form-horizontal">
                <div id="loginTitle">
                    <h4>Alis' Assessment</h4>
                </div>
               

                <div class="form-group">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                       
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label",id="passLabel" })
                    <div>
                        <div class="row">
                            <div class="col-xs-10 col-sm-10 col-md-10" style="padding: 6px 0px 6px 12px;">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            </div>
                            <div class="col-xs-2 col-sm-2 col-md-2" style="padding: 6px 12px 6px 0px; ">
                                <button id="show_password" class="btn btn-primary" type="button" >
                                    <span class="fa fa-eye-slash icon"></span>
                                </button>
                            </div>
                           
                            
                        </div>
                           
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                <div class="form-group">
                    <div id="SubmitButton">
                        <input type="submit" value="Login" class="button-Login" />
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
